"""Default entrypoint."""

import os
import sys
import traceback

from qiskit_serverless import get_arguments, save_result

sys.path.append("{{mount_path}}")

from {{package_name}} import Runner

try:
    arguments = get_arguments()
except Exception:
    save_result(traceback.format_exc())
    raise

try:
    runner = Runner()
    result = runner.run(arguments)

    if result is not None:
        save_result(result)
except Exception:
    save_result(traceback.format_exception_only())
    raise
