{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases"
  ],
  "prConcurrentLimit": 4,
  "rangeStrategy": "bump",
  "rebaseWhen": "never",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^opentelemetry"
      ],
      "groupName": "opentelemetry packages"
    },
    {
      "matchPackagePatterns": [
        "^qiskit"
      ],
      "groupName": "qiskit packages"
    }
  ]
}
